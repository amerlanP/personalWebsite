---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';
const resumeURL = '/resume.pdf';

---

<BaseLayout title="Resume | Patrick Amerlan" description="Patrick Amerlan's Resume">
    <div class="pdf-container">
        <embed src={resumeURL} type="application/pdf"/>
    </div>
</BaseLayout>

<style>
  .pdf-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 1000px;
    padding: 0 16px; /* Optional: Add some padding for better responsiveness */
    box-sizing: border-box;
  }

  embed {
    width: 90%;
    height: 100%;
    border: none;
  }
</style>